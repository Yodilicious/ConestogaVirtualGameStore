@model IEnumerable<ConestogaVirtualGameStore.Web.Models.ViewModels.FriendViewModel>

@{
    ViewData["Title"] = "Friends/Family Member List";
}

<h2>Friends/Family Member  List</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Friends" asp-action="Index">
            <p>
                User Name: <input type="text" name="id">
                <input class="btn btn-primary" type="submit" value="Search" />
                <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Friends")'">Reset</button>
            </p>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <h2>No Friends Found!</h2>
}

<table class="table">
    <thead>
        <tr>
                <th>
                    User Name
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-controller="Wishlist" asp-action="Index" asp-route-id="@item.Email">Wishlist</a> |
                <a asp-action="Remove" asp-route-id="@item.Id">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
