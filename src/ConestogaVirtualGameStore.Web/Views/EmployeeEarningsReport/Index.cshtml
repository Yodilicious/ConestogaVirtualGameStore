@model List<ConestogaVirtualGameStore.Web.Models.ViewModels.EmployeeEarningsReportViewModel>
@{
    ViewData["Title"] = "Index";
}

<h2>Employee Earnings Report</h2>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Employee ID</th>
        <th>Name</th>
        <th>Hourly Wage</th>
        <th>Total</th>
        <th>Month</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.HourlyWage.ToString("C")</td>
            <td>@item.Total.ToString("C")</td>
            <td>@item.Month</td>
        </tr>
    }
    </tbody>
</table>